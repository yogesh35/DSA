

class Solution:
    def get_min_max(self, arr):
        
        if len(arr) == 1:
            return (arr[0], arr[0])
        
        minimum = maximum = arr[0]
        
        
        for num in arr[1:]:
            if num < minimum:
                minimum = num
                
            elif num > maximum:
                maximum = num
                
            
        return (minimum, maximum)
